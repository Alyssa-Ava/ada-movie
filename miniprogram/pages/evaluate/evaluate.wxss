}

.evaluate-btn, .grade, .upload, .submit {
  margin-top: 20rpx;
}

.uploadImgBtn {
  width: 200rpx;
  height: 80rpx;
  background: orangered;
  float: left;
  font-size: 13px;
  color: #fff;
}

.img-container {
  clear: both;
  padding:10rpx;
}
.img-container image{
  width:200rpx;
  height: 200rpx;
  margin:0 20rpx 0 20rpx;
}

.submit {
  width: 100%;
  height: 80rpx;
  font-size: 13px;
  color: #fff;
  background: #f00;
}

.movie-detail {
  /* width: 440rpx;
