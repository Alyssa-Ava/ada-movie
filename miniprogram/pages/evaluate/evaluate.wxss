.color-cover {
  position: absolute;
  width: 100%;
  height: 370rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.img-cover {
  filter: blur(40rpx);
  opacity: 0.4;
  float: left;
  width: 100%;
  height: 370rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.tags {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}